<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/text_view_shape">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_news"
                android:layout_width="99dp"
                android:layout_height="84dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/date_news"
                android:padding="4dp"
                android:src="@drawable/avatar" />

            <ImageView
                android:id="@+id/block_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_block"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/title_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Название"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/date_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/number_people_news"
                android:layout_marginTop="44dp"
                android:text="26.08.2018"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/number_people_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/score_news"
                android:layout_marginBottom="52dp"
                android:text="5 человек"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/score_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/circle_news"
                android:layout_alignEnd="@+id/title_news"
                android:text="Очки"
                android:textColor="@color/black" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>