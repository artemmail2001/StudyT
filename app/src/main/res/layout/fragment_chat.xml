<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blue">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_chat"
                android:layout_width="78dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="7dp"
                android:padding="4dp"
                android:src="@drawable/avatar" />

            <ImageView
                android:id="@+id/green_chat"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@+id/circle_chat"
                android:layout_alignEnd="@+id/circle_chat"
                android:src="@drawable/green" />

            <TextView
                android:id="@+id/name_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="103dp"
                android:layout_marginTop="13dp"
                android:text="Имя" />

            <TextView
                android:id="@+id/message_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/name_chat"
                android:layout_marginBottom="14dp"
                android:text="Сообщение"
                android:maxLines="1"
                android:ellipsize="end"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>